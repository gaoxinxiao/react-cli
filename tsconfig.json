{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",//module以commonjs的规范
        "target": "es5",//以2015低版本的方式编译
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true, 
        "outDir": "dist",
        "sourceMap": true,
        "allowJs":true,//是否允许js的语法
        "types":["node"],
        "typeRoots":[
            "./node_modules/@type",
        ]
    },
    "include":[
        "./src"
    ],
    "exclude":[
        "./node_modules"
    ]   
}  